{
    "name": "joesama/profile",
    "description": "Laravel user profile package",
    "require": {
        "php": "^7.2.5",
        "nesbot/carbon": "^2.32",
        "illuminate/support": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "orchestra/testbench": "^5.2",
        "orchestra/canvas": "^5.2",
        "phpstan/phpstan": "^0.12.20",
        "mockery/mockery": "^1.3"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Ahmed Johari",
            "email": "joharijumali@gmail.com"
        }
    ],    
    "autoload": {
        "psr-4": {
            "Joesama\\Profile\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "provider": [
                "Joesama\\Profile\\ProfileProvider"
            ]
        }
    },
    "scripts": {
        "testing": [
            "vendor/bin/phpunit tests/ --coverage-clover clover.xml"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
